{
  "name": "tabusoft/orm",
  "description": "Simple ORM and entity manager",
  "type": "library",
  "license": "GPL-3.0+",

  "authors": [
    {
      "name": "Marco Tabucchi",
      "role": "developer"
    }
  ],

  "require": {
    "php": "^7.4",
    "tabusoft/db": "^1.0",
    "tabusoft/cli-manager": "^1.0",
    "jdorn/sql-formatter": "^1.0"
  },

  "require-dev": {
    "phpunit/phpunit": "^5.6",
    "symfony/var-dumper": "^3.1"
  },

  "autoload": {
    "psr-4": {
      "Tabusoft\\ORM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tabusoft\\ORM\\Tests\\": "tests/"
    }
  },

  "bin": ["bin/create-config.php", "bin/orm-cli.php"]
}
